@layout BlankLayout
@page "/Login"
@inherits LoginBase

<div class="d-flex justify-content-center mt-5">
    <div class="login-panel">
        <div class="card login-panel">
            <div class="card-img-top p-3 d-flex align-items-center">
                <div class="login-logo">
                    <img src="/images/TPK_Logo.png" alt="" class="w-100"/>
                </div>
                <h1 class="ml-3 mb-0">Data Services</h1>
            </div>
            <div class="card-body border-top">
                <EditForm Model="_userInfo" OnValidSubmit="LoginUser">
                    <DataAnnotationsValidator/>

                    @if (_isLoginSuccess == false)
                    {
                        <div class="alert alert-danger mb-3">
                            <div class="text-danger">Invalid login attempt.</div>
                        </div>
                    }

                    <div class="form-group">
                        <label>Username or Email:</label>
                        <DxTextBox @bind-Text="@_userInfo.Username"
                                    ClearButtonDisplayMode="@DataEditorClearButtonDisplayMode.Auto"
                                    NullText="Username..."
                                    SizeMode="SizeMode.Medium"/>

                        <ValidationMessage For="() => _userInfo.Username"/>
                    </div>

                    <div class="form-group">
                        <label>Password:</label>
                        <DxTextBox @bind-Text="@_userInfo.Password"
                                    ClearButtonDisplayMode="@DataEditorClearButtonDisplayMode.Auto"
                                    Password="true"
                                    NullText="Password..."
                                    SizeMode="SizeMode.Medium"/>

                        <ValidationMessage For="() => _userInfo.Password"/>
                    </div>

                    <div class="d-flex justify-content-end">
                        <DxButton RenderStyle="ButtonRenderStyle.Primary"
                                  SubmitFormOnClick="true"
                                  Text="Log in"
                                  IconCssClass="mdi mdi-18px mdi-login mr-2"
                                  SizeMode="SizeMode.Medium"/>
                    </div>

                </EditForm>
            </div>
        </div>
    </div>
</div>