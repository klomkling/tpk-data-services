@page "/inventories/inventory-requests"

@inherits InventoryRequestsBase

<h3>Inventory Requests</h3>

@if (IsValidating)
{
    <LoadingProcess/>
}
else
{
    <div class="mt-3">
        <InventoryRequestComponent IsDetailBusy="@IsRequestLineBusy"
                                   @bind-SelectedId="@InventoryRequestId"
                                   @bind-SelectedCount="@InventoryRequestSelectedCount"
                                   @bind-IsBusy="@IsInventoryRequestBusy"
                                   @bind-FirstRender="@IsInventoryRequestFirstRender"/>
    </div>

    if (InventoryRequestId > 0 && IsInventoryRequestBusy == false)
    {
        <div class="mt-3">
            <DxTabs CssClass="tg-tabs">
                <DxTabPage Text="Details">
                    <InventoryRequestLineComponent MasterId="@InventoryRequestId"
                                                   IsMasterBusy="@IsInventoryRequestBusy"
                                                   ToolbarCssClass="tg-detail-grid"
                                                   @bind-IsBusy="@IsRequestLineBusy"
                                                   @bind-SelectedId="@InventoryRequestLineId"
                                                   @bind-SelectedCount="@InventoryRequestLineSelectedCount"
                                                   @bind-FirstRender="@IsRequestLineFirstRender"/>
                </DxTabPage>
            </DxTabs>
        </div>
    }
}

<div class="pt-lg-5"></div>