@page "/users/update-password"

@inherits UpdatePasswordBase

<div class="d-flex justify-content-center mt-5">
    <div class="login-panel">
        <div class="card login-panel">
            <div class="p-3 d-flex align-items-center">
                <h3 class="mb-0">Update Password</h3>
            </div>
            <div class="card-body border-top">
                <EditForm Model="UserInfo" OnValidSubmit="UpdatePassword">
                    <DataAnnotationsValidator/>

                    @if (IsSuccess == false)
                    {
                        <div class="alert alert-danger mb-3">
                            <div class="text-danger">Cannot update password, please contact IT.</div>
                        </div>
                    }

                    <div class="form-group">
                        <label>Current Password:</label>
                        <DxTextBox ClearButtonDisplayMode="@DataEditorClearButtonDisplayMode.Auto"
                                   Password="true"
                                   NullText="Current password"
                                   SizeMode="SizeMode.Medium"
                                   @bind-Text="@UserInfo.CurrentPassword"/>

                        <ValidationMessage For="() => UserInfo.CurrentPassword"/>
                    </div>

                    <div class="form-group">
                        <label>Password:</label>
                        <DxTextBox ClearButtonDisplayMode="@DataEditorClearButtonDisplayMode.Auto"
                                   Password="true"
                                   NullText="New password"
                                   SizeMode="SizeMode.Medium"
                                   @bind-Text="@UserInfo.NewPassword"/>

                        <ValidationMessage For="() => UserInfo.NewPassword"/>
                    </div>

                    <div class="form-group">
                        <label>Password:</label>
                        <DxTextBox ClearButtonDisplayMode="@DataEditorClearButtonDisplayMode.Auto"
                                   Password="true"
                                   NullText="Confirm password"
                                   SizeMode="SizeMode.Medium"
                                   @bind-Text="@UserInfo.ConfirmPassword"/>
                    
                        <ValidationMessage For="() => UserInfo.ConfirmPassword"/>
                    </div>

                    <div class="d-flex justify-content-end">
                        <DxButton RenderStyle="ButtonRenderStyle.Secondary"
                                  Text="Cancel"
                                  IconCssClass="mdi mdi-18px mdi-cancel mr-2"
                                  SizeMode="SizeMode.Medium"
                                  CssClass="mr-2"
                                  Click="@CancelRequest"/>
                        <DxButton RenderStyle="ButtonRenderStyle.Primary"
                                  SubmitFormOnClick="true"
                                  Text="Update"
                                  IconCssClass="mdi mdi-18px mdi-login mr-2"
                                  SizeMode="SizeMode.Medium"/>
                    </div>

                </EditForm>
            </div>
        </div>
    </div>
</div>